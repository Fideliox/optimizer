<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, :as => resource_name, :role => 'form' , :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email address</label>
          <%= f.email_field :email, :class => 'form-control', :autofocus => true, placeholder: 'Email address', required: true, autocomplete: "off" %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">Password</label>
          <%= f.password_field :password, :class => 'form-control', placeholder: 'Password', required: true, autocomplete: "off" %>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> Remember me
          </label>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success btn-block">Sign in</button>
        </div>
    <% end %>
  </div>
</div>