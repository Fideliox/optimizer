<%= form_tag('/session/reset_password') do %>
    <div class="form-group">
        <%= password_field_tag :password1, nil, autofocus: true, class: 'form-control', required: true, placeholder: 'Password Old' %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password2, nil, class: 'form-control', required: true, placeholder: 'New Password' %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password, nil, class: 'form-control', required: true, placeholder: 'Repeat Password' %>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Change" />
    </div>
<% end %>
